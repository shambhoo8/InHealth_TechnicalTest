@{
    Layout = null;
}

@Html.Partial("~/Views/Home/_PartialMenuStandardUser.cshtml")

<div class="col-md-6 col-md-offset-3">
    <h2>Add New Post</h2>
    <form name="form" role="form">
        
        <div class="form-group" ng-class="{ 'has-error': form.title.$dirty && form.title.$error.required }">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" ng-maxlength="200" ng-model="post.title" required />
            <span ng-show="form.title.$dirty && form.title.$error.required" class="help-block">Title is required</span>
        </div>
        <div class="form-group" ng-class="{ 'has-error': form.content.$dirty && form.content.$error.required }">
            <label for="content">Content</label>
            <textarea name="content" id="content" style="height:350px; width:480px;" class="form-control" ng-model="post.PostContent" required />
            <span ng-show="form.content.$dirty && form.content.$error.required" class="help-block">Content is required</span>
        </div>
        <div class="form-actions">
            <button type="button" ng-click="Submit()" ng-disabled="form.$invalid || dataLoading" class="btn btn-primary">Post</button>
            <img ng-if="dataLoading" src="data:image/gif;base64," />
            <a href="#BlogPostUser" class="btn btn-link">Cancel</a>
        </div>
    </form>
</div>

@{
    Layout = null;
}

@Html.Partial("~/Views/Home/_PartialMenuAdmin.cshtml")
  
<div class="col-md-10 col-md-offset-1">
    <h2>Registered User List</h2>
</div>
<div class="col-lg-12" style="align-content:center;">
    <div class="panel  panel-default col-md-10 col-md-offset-1">
        <div class="panel-body tab-Scroll ">

            <table class="table table-responsive tblfixed"
                   selected-items="selectedUserList"
                   selection-mode="SingleRow"
                   enable-filtering="true"
                   tr-ng-grid=""
                   items="UsersList"
                   page-items="PageItemsCount_UserList"
                   total-items="UserListTotalCount"
                   current-page="setCurrentPage_UserList"
                   filter-by="GlobalFilter_UserList"
                   order-by="OrderBy_UserList"
                   order-by-reverse="OrderByReversed_UserList"
                   on-data-required="onServerSideItemsRequested(currentPage, pageItems, filterBy, filterByFields, orderBy, orderByReverse)">
                <thead>
                    <tr>
                        <th field-name="" display-name="SNo" style="width:5%;" enable-filtering="false" enable-sorting="false">
                        </th>
                        <th field-name="userId" display-name="UserId" ng-hide="true" enable-filtering="false" enable-sorting="false">
                        </th>
                        <th field-name="First_Name" display-name="First Name" style="width:20%;" enable-filtering="false" enable-sorting="false">
                        </th>
                        <th field-name="Last_Name" display-name="Last Name" style="width:20%;" enable-filtering="false" enable-sorting="false">
                        </th>
                        <th field-name="EmailId" display-name="EmailId" style="width:20%;" enable-filtering="false" enable-sorting="false">
                        </th>
                        <th field-name="RoleName" display-name="User Role" style="width:15%;" enable-filtering="false" enable-sorting="false">
                        </th>
                        <th field-name="" display-name="Options" style="width:20%;" enable-filtering="false" enable-sorting="false">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td field-name="">
                            <p> {{$index + 1}}</p>
                        </td>
                        <td field-name="userId" ng-hide="true">
                            
                        </td>
                        <td field-name="">
                            <input type="button" class="btn btn-sm btn-warning " value="Update Role" ng-click="UpdateRole(gridItem.userId,gridItem.RoleName)" />
                          &nbsp;&nbsp; &nbsp; <input type="button" class="btn btn-sm btn-danger " value="Delete User" ng-click="DeleteUser(gridItem.userId,gridItem.RoleName)" />
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="13">
                            <span tr-ng-grid-pager=""></span>
                            <div class="text-center">
                            </div>
                            <span style="font-size:15px;">Total Rows: {{UserListTotalCount}}</span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>